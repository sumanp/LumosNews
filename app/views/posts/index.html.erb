
<br>
<h5>Recent Posts</h5>


<ul class="collection">
  <% @posts.each do |post| %>
    <li class="collection-item avatar">
      <i class="material-icons circle">description</i>
      <span class="title"><%= link_to post.title, post %> <a href="<%= post.url %>" target="_blank"><i class="material-icons tiny">open_in_new</i></a></span>
      <p><%= post.url %> <br>
        <small> submitted <%= time_ago_in_words(post.created_at) %> ago </small>
      </p>
      <a href="#!" class="secondary-content"><i class="material-icons">bookmark_border</i></a>
    </li>

    <% end %>
  </ul>
