  <div id="invite" class="modal">
    <div class="modal-content">
      <h5 class="center-align" >Request An Invite</h5></br>
        <%= form_for Request.new do |f| %>

            <div class="input-field col s12">
              <i class="material-icons prefix">perm_identity</i>
              <%= f.label :your_name, 'data-error' => 'wrong', 'data-success'=> 'right' %><br>
              <%= f.text_field :name, placeholder: "eg: Elon Musk", class: "validate" %>

            </div>

            <div class="input-field col s12">
              <i class="material-icons prefix">mail_outline</i>
              <%= f.label :your_email, 'data-error' => 'wrong', 'data-success'=> 'right' %><br>
              <%= f.email_field :email, placeholder: "eg: elon@spacex.com", class: "validate" %>

            </div>

            <div class="actions center-align">
              <%= f.submit "Invite Me!", class: "btn-large green accent-4", onclick: "Materialize.toast('*drum roll*', 6000)" %>
            </div>

        <%end%>



